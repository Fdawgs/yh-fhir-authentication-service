{
	"name": "ydh-fhir-authentication-service",
	"version": "12.0.4",
	"description": "Yeovil District Hospital NHSFT's FHIR API authentication service",
	"main": "dist/app.js",
	"repository": "git+https://github.com/Fdawgs/ydh-fhir-authentication-service.git",
	"homepage": "https://github.com/Fdawgs/ydh-fhir-authentication-service",
	"bugs": {
		"url": "https://github.com/Fdawgs/ydh-fhir-authentication-service/issues"
	},
	"license": "MIT",
	"author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
	"engines": {
		"node": ">=18.12.1"
	},
	"scripts": {
		"benchmark": "autocannon -a 1000 -H \"Authorization:Bearer testtoken\" \"http://0.0.0.0:3000/STU3/Flag/126844-10\"",
		"build": "node .esbuild.js",
		"jest": "jest",
		"jest:coverage": "jest --coverage",
		"lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
		"lint:licenses": "license-checker --direct --onlyAllow=\"0BSD;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;MIT;Unlicense\" --production --summary",
		"lint:prettier": "prettier . -w -u",
		"lint:prettier:ci": "prettier . -c -u",
		"prepare": "husky install",
		"start": "node .",
		"start:dev": "nodemon src/app.js | pino-pretty",
		"test": "npm run lint && npm run jest"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"jest": {
		"clearMocks": true,
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/app.js",
			"!src/plugins/jwt-jwks-auth/*.js"
		],
		"coverageReporters": [
			"text",
			"lcovonly"
		],
		"resetMocks": true,
		"testEnvironment": "node",
		"testTimeout": 10000
	},
	"nodemonConfig": {
		"env": {
			"NODE_ENV": "development",
			"SUPPRESS_SUPPORT": 1
		},
		"ignore": [
			"test_resources"
		],
		"verbose": true,
		"watch": [
			".env",
			"src"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"autocannon": "^7.10.0",
		"esbuild": "^0.17.5",
		"esbuild-plugin-glob": "^2.2.1",
		"eslint": "^8.34.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-jsdoc": "^40.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-security": "^1.7.1",
		"eslint-plugin-security-node": "^1.1.1",
		"glob": "^8.1.0",
		"husky": "^8.0.3",
		"jest": "^29.4.3",
		"license-checker": "^25.0.1",
		"mock-jwks": "^1.0.9",
		"nock": "^13.3.0",
		"nodemon": "^2.0.20",
		"pino-pretty": "^9.3.0",
		"prettier": "^2.8.4"
	},
	"dependencies": {
		"@fastify/accepts": "^4.1.0",
		"@fastify/auth": "^4.2.0",
		"@fastify/autoload": "^5.7.1",
		"@fastify/bearer-auth": "^9.0.0",
		"@fastify/compress": "^6.2.0",
		"@fastify/cors": "^8.2.0",
		"@fastify/helmet": "^10.1.0",
		"@fastify/rate-limit": "^7.6.0",
		"@fastify/reply-from": "^8.4.3",
		"@fastify/sensible": "^5.2.0",
		"@fastify/under-pressure": "^8.2.0",
		"ajv-formats": "^2.1.1",
		"dotenv": "^16.0.3",
		"env-schema": "^5.2.0",
		"fast-jwt": "^2.2.0",
		"fastify": "^4.13.0",
		"fastify-disablecache": "^3.1.0",
		"fastify-floc-off": "^2.1.0",
		"fastify-json-to-xml": "^1.1.0",
		"fastify-plugin": "^4.5.0",
		"file-stream-rotator": "^1.0.0",
		"fluent-json-schema": "^4.1.0",
		"get-jwks": "^8.0.3",
		"pino": "^8.10.0",
		"secure-json-parse": "^2.7.0",
		"upath": "^2.0.1"
	}
}
